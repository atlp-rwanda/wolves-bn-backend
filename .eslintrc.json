{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 2015,
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": [
            "off",
            "windows"
        ],
        "consistent-return": 0,
        "no-console": "off",
        "no-unused-vars": "off",
        "no-path-concat": "off",
        "global-require": "off",
        "arrow-parens": "off"
    }
}